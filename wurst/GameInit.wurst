package GameInit
import Players
import ClosureTimers
import GameConstants

function setArenaVision(rect arenaRect)
  for p in PLAYERS
    createVision(p, arenaRect, false).start()
    
function initPlayers()
  PLAYERS = ALL_PLAYERS.filter((player p) -> p != ENEMY_PLAYER) 

  onPlayerLeave() p ->
    PLAYERS.remove(p)
    
init
  nullTimer() -> 
    initPlayers()
    setArenaVision(gg_rct_Arena1)