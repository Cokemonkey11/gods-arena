package MoonAmulet
import RecipeItem
import MapIcons
import CustomStatSystem

public constant MOON_AMULET_ITEM = compiletime(new RecipeItem()
..setName("Moon Amulet")
..setInterfaceIcon(MapIcons.bTNMoonAmulet)
..setGoldCost(125)
..onPickup(actor -> actor.addStat(CustomUnitStats.SPELL_POWER, 0.15))
..onDrop(actor -> actor.addStat(CustomUnitStats.SPELL_POWER, -0.15)) 
..generateTooltip("+15%".color(COLOR_GOLD) + " Spell Power")
)..register()